{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "sourceRoot": "./src",
    "removeComments": true,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}